
<% @currentPrefectureStatistic = current_prefecture_statistic %>
<div class="flex">
    <div class="w-1/3 px-6 my-6 rounded overflow-hidden shadow-lg">
        <div class="px-6 py-4">
            <div class="font-bold text-xl m-2">
                <%= @currentPrefectureStatistic.name_ja %>'s Total
            </div>
            <p class="text-gray-700 text-base">
                <%= @currentPrefectureStatistic.total_count %>
            </p>
        </div>
    </div>
    <div class="w-1/3 px-6 my-6 rounded overflow-hidden shadow-lg">
        <div class="px-6 py-4">
            <div class="font-bold text-xl m-2">
                <%= @currentPrefectureStatistic.name_ja %>'s rate by gender
            </div>
            <p class="text-gray-700 text-base">
                Male : <%= @currentPrefectureStatistic.male_count %>
                Female : <%= @currentPrefectureStatistic.female_count %>
                Unknown : <%= @currentPrefectureStatistic.unknown_gender_count %>
            </p>
        </div>
    </div>
    <div class="w-1/3 px-6 my-6 rounded overflow-hidden shadow-lg">
        <div class="px-6 py-4">
            <div class="font-bold text-xl m-2">
                <%= @currentPrefectureStatistic.name_ja %>'s rate by age
            </div>
            <p class="text-gray-700 text-base">
                 0s ages : <%= @currentPrefectureStatistic.male_00s %>
                30s ages : <%= @currentPrefectureStatistic.male_30s %>
                80s ages : <%= @currentPrefectureStatistic.male_80s %>
            </p>
        </div>
    </div>
</div>
<h2>Last updated at <%=  @currentPrefectureStatistic.updated_at %></h2>
